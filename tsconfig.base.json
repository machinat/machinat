{
  "compilerOptions": {
    "lib": ["es2019"],
    "module": "commonjs",
    "target": "es2017",
    "strictNullChecks": true,
    "esModuleInterop": true,
    "jsx": "react",
    "jsxFactory": "Sociably.createElement",
    "jsxFragmentFactory": "Sociably.Fragment",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@sociably/auth": ["./packages/auth/src/index.js"],
      "@sociably/auth/*": ["./packages/auth/src/*"],
      "@sociably/core": ["./packages/core/src/index.js"],
      "@sociably/core/*": ["./packages/core/src/*"],
      "@sociably/http": ["./packages/http/src/index.js"],
      "@sociably/http/*": ["./packages/http/src/*"],
      "@sociably/next": ["./packages/next/src/index.js"],
      "@sociably/next/*": ["./packages/next/src/*"],
      "@sociably/dev-tools/*": ["./packages/dev-tools/src/*"],
      "@sociably/websocket": ["./packages/websocket/src/index.js"],
      "@sociably/websocket/*": ["./packages/websocket/src/*"],
      "@sociably/webview": ["./packages/webview/src/index.js"],
      "@sociably/webview/*": ["./packages/webview/src/*"]
    }
  }
}
