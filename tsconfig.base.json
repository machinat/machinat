{
  "compilerOptions": {
    "lib": ["es2019"],
    "module": "commonjs",
    "target": "es2017",
    "strictNullChecks": true,
    "esModuleInterop": true,
    "jsx": "react",
    "jsxFactory": "Machinat.createElement",
    "jsxFragmentFactory": "Machinat.Fragment",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@machinat/auth": ["./packages/auth/src/index.js"],
      "@machinat/auth/*": ["./packages/auth/src/*"],
      "@machinat/core": ["./packages/core/src/index.js"],
      "@machinat/core/*": ["./packages/core/src/*"],
      "@machinat/http": ["./packages/http/src/index.js"],
      "@machinat/http/*": ["./packages/http/src/*"],
      "@machinat/next": ["./packages/next/src/index.js"],
      "@machinat/next/*": ["./packages/next/src/*"],
      "@machinat/dev-tools/*": ["./packages/dev-tools/src/*"],
      "@machinat/websocket": ["./packages/websocket/src/index.js"],
      "@machinat/websocket/*": ["./packages/websocket/src/*"],
      "@machinat/webview": ["./packages/webview/src/index.js"],
      "@machinat/webview/*": ["./packages/webview/src/*"]
    }
  }
}
