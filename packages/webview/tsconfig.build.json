{
  "extends": "../../tsconfig.build.json",
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib",
    "baseUrl": ".",
    "paths": {
      "@sociably/auth/*": ["../auth/lib/*"],
      "@sociably/core/*": ["../core/lib/*"],
      "@sociably/http/*": ["../http/lib/*"],
      "@sociably/next/*": ["../next/lib/*"],
      "@sociably/websocket/*": ["../websocket/lib/*"]
    }
  },
  "references": [
    { "path": "../auth/tsconfig.build.json" },
    { "path": "../core/tsconfig.build.json" },
    { "path": "../http/tsconfig.build.json" },
    { "path": "../next/tsconfig.build.json" },
    { "path": "../websocket/tsconfig.build.json" }
  ]
}
